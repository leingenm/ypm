// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
	"name": "Java",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/java:1-21-bullseye",

	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"version": "none",
			"installMaven": "false",
			"installGradle": "true"
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "java -version",

	// Configure tool-specific properties.
  "customizations" : {
    "jetbrains" : {
        "settings": {
            "com.intellij:app:EditorSettings.is_ensure_newline_at_eof": true,
            "com.intellij:app:EditorSettings.remove_trailing_blank_lines": true,
            "Git4Idea:app:Git-Application-Settings.use_credential_helper": true,
            "Git4Idea:app:Git-Application-Settings.staging_area_enabled": true,
            "com.intellij:app:XmlEditorOptions.showCssInlineColorPreview": true,
            "com.intellij:app:EmmetOptions.previewEnabled": true,
            "JavaScript:app:JSEditorOptions.start_string_interpolation_on_typing": true,
            "com.intellij:app:JsonEditorOptions.colon_move_outside_quotes": true,
            "com.intellij:app:JsonEditorOptions.comma_move_outside_quotes": true,
            "org.intellij.plugins.markdown:app:MarkdownCodeInsightSettings.renumberListsOnType": true
        },
      "backend" : "IntelliJ"
    }
  },

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
